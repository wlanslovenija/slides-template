\else
  \PackageWarningNoLine{beamerthemewlansi}{This version of beamertheme wlansi (\beamerwlansi@version ) might not work with detected beamer class \beamer@version}
\fi

\mode<presentation>

\newif\ifbeamer@nav
\newif\ifbeamer@numbers
\newif\ifbeamer@nologo
\newif\ifbeamer@dark
\newif\ifbeamer@contrast

\beamer@navfalse
\beamer@numbersfalse
\beamer@nologotrue
\beamer@darkfalse
\beamer@contrastfalse

\DeclareOptionBeamer{nav}{\beamer@navtrue}
\DeclareOptionBeamer{numbers}{\beamer@numberstrue}
\DeclareOptionBeamer{nologo}{\beamer@nologofalse}
\DeclareOptionBeamer{dark}{\beamer@darktrue}
\DeclareOptionBeamer{contrast}{\beamer@contrasttrue}

\ProcessOptionsBeamer

\useoutertheme{wlansi}
\usecolortheme{wlansi}
\useinnertheme{circles}


\ifbeamer@nav
\else
  \setbeamertemplate{navigation symbols}{} 
\fi

\defbeamertemplate*{title page}{wlansi}[1][] {%
  \begin{centering}
    {\usebeamercolor[fg]{titlegraphic}\inserttitlegraphic\par}
\vskip1em
    \begin{beamercolorbox}[sep=8pt,center,#1]{title}
      \usebeamerfont{title}\inserttitle\par%
      \ifx\insertsubtitle\@empty%
      \else%
        \vskip0.05em%
        {\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par}%
      \fi%     
    \end{beamercolorbox}%
    \vskip0.5em\par
    \begin{beamercolorbox}[sep=8pt,center,#1]{author}
      \usebeamerfont{author}\insertauthor
    \end{beamercolorbox}
    \begin{beamercolorbox}[sep=8pt,center,#1]{institute}
      \usebeamerfont{institute}\insertinstitute 
\ifx\insertdate\@empty 
\else
\ifx\insertinstitute\@empty 
\else
\ --\ 
\fi
\fi
\usebeamerfont{date}\insertdate
    \end{beamercolorbox}

  \end{centering}
  \vfill
}

% No navigation symbols in handout or trans mode:
\only<handout| trans>{\setbeamertemplate{navigation symbols}{}}

\setbeamerfont{block title}{size={}}

\mode
<all>
